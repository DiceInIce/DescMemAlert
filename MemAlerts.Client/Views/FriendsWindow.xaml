<Window x:Class="MemAlerts.Client.Views.FriendsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:models="clr-namespace:MemAlerts.Shared.Models;assembly=MemAlerts.Shared"
        mc:Ignorable="d"
        Title="MemAlerts - Друзья"
        Height="600"
        Width="500"
        Background="{DynamicResource AppBackgroundBrush}"
        TextElement.Foreground="{DynamicResource PrimaryTextBrush}"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PrimaryGradient}"
                Padding="16"
                CornerRadius="14"
                Margin="12"
                MouseLeftButtonDown="ColorZone_MouseLeftButtonDown">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" VerticalAlignment="Center" Margin="0 0 8 0"/>
                    <TextBlock Text="Друзья" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Click="CloseButton_Click"
                        ToolTip="Закрыть"
                        Foreground="White"
                        Width="30" Height="30">
                    <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <!-- Content with Tabs -->
        <TabControl Grid.Row="1"
                    Margin="12"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    Padding="12">
            <!-- Friends Tab -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{Binding FriendsCount, StringFormat=Друзья ({0})}"
                               Foreground="{DynamicResource PrimaryTextBrush}" />
                </TabItem.Header>
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" 
                            Content="Обновить" 
                            Command="{Binding RefreshFriendsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Right" />

                    <ListView Grid.Row="1" ItemsSource="{Binding Friends}" HorizontalContentAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:FriendInfo}">
                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Login}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Email}" FontSize="11" Opacity="0.7" />
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Command="{Binding DataContext.RemoveFriendCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Удалить из друзей"
                                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                                            Foreground="Red"
                                            Width="32" Height="32"
                                            Margin="8,0,0,0">
                                        <materialDesign:PackIcon Kind="AccountRemove" Width="20" Height="20" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- Pending Requests Tab -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{Binding PendingRequestsCount, StringFormat=Запросы ({0})}"
                               Foreground="{DynamicResource PrimaryTextBrush}" />
                </TabItem.Header>
                <Grid Margin="8">
                    <ListView ItemsSource="{Binding PendingRequests}" HorizontalContentAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:FriendInfo}">
                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Login}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Email}" FontSize="11" Opacity="0.7" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsIncomingRequest, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="Принять" 
                                                Command="{Binding DataContext.AcceptFriendRequestCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                Margin="4,0"
                                                Height="40"
                                                Padding="16,0" />
                                        <Button Content="Отклонить" 
                                                Command="{Binding DataContext.RejectFriendRequestCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Foreground="#D32F2F"
                                                BorderBrush="#D32F2F"
                                                Margin="4,0"
                                                Height="40"
                                                Padding="16,0" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- Search Tab -->
            <TabItem Header="Поиск">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Поиск по логину или email..."
                             Style="{StaticResource AppOutlinedTextBox}"
                             Margin="0,0,0,8">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchUsersCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Row="1"
                            Content="Найти" 
                            Command="{Binding SearchUsersCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Right" />

                    <ListView Grid.Row="2" ItemsSource="{Binding SearchResults}" HorizontalContentAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:UserInfo}">
                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Login}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Email}" FontSize="11" Opacity="0.7" />
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Content="Добавить" 
                                            Command="{Binding DataContext.SendFriendRequestCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Margin="12"
                Padding="12,6"
                CornerRadius="10"
                Background="{DynamicResource ToolbarBrush}">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryTextBrush}" />
        </Border>
    </Grid>
</Window>

