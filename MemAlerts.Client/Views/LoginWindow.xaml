<Window x:Class="MemAlerts.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MemAlerts - Вход"
        Height="520"
        MinHeight="530"
        Width="420"
        Background="{DynamicResource AppBackgroundBrush}"
        TextElement.Foreground="{DynamicResource PrimaryTextBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Drag and Close -->
        <Border Grid.Row="0"
                Background="{DynamicResource PrimaryGradient}"
                Padding="16"
                CornerRadius="14"
                Margin="14, 14, 14, 0"
                MouseLeftButtonDown="ColorZone_MouseLeftButtonDown">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Kind="YoutubeTv" Width="24" Height="24" VerticalAlignment="Center" Margin="0 0 8 0"/>
                    <TextBlock Text="MemAlerts" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Click="CloseButton_Click"
                        ToolTip="Закрыть"
                        Foreground="White"
                        Width="30" Height="30"
                        Margin="0">
                    <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="14" >
            <Border Background="{DynamicResource CardBrush}"
                    CornerRadius="16"
                    Padding="32"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Вход в систему" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16" />
                    
                    <TextBox x:Name="LoginTextBox"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Логин или Email"
                             Style="{StaticResource AppOutlinedTextBox}"
                             MinHeight="48"
                             Margin="0,0,0,16" />

                    <TextBox x:Name="EmailTextBox"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Email (для регистрации)"
                             Style="{StaticResource AppOutlinedTextBox}"
                             MinHeight="48"
                             Margin="0,0,0,16" />

                    <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 Style="{StaticResource AppOutlinedPasswordBox}"
                                 MinHeight="48"
                                 Margin="0,0,0,16"
                                 PasswordChanged="PasswordBox_PasswordChanged" />

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#EF4444" 
                               TextWrapping="Wrap"
                               MinHeight="20"
                               Margin="0,0,0,16"
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <Button Content="ВОЙТИ"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            MinHeight="48"
                            Margin="0,0,0,12"
                            IsEnabled="{Binding IsNotBusy}" />

                    <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                            Command="{Binding RegisterCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            MinHeight="48"
                            Margin="0,0,0,12"
                            IsEnabled="{Binding IsNotBusy}"
                            Click="Button_Click" />

                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{DynamicResource SecondaryTextBrush}" 
                               FontSize="11"
                               HorizontalAlignment="Center"
                               MinHeight="16" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>