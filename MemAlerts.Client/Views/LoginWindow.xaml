<Window x:Class="MemAlerts.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MemAlerts - Вход"
        Height="460"
        Width="420"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Drag and Close -->
        <materialDesign:ColorZone Mode="PrimaryMid" 
                                  Padding="16" 
                                  materialDesign:ElevationAssist.Elevation="Dp4"
                                  MouseLeftButtonDown="ColorZone_MouseLeftButtonDown">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Kind="YoutubeTv" Width="24" Height="24" VerticalAlignment="Center" Margin="0 0 8 0"/>
                    <TextBlock Text="MemAlerts" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Click="CloseButton_Click"
                        ToolTip="Закрыть"
                        Foreground="White"
                        Width="30" Height="30"
                        Margin="0">
                    <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20"/>
                </Button>
            </Grid>
        </materialDesign:ColorZone>

        <Grid Grid.Row="1" Margin="30">
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0 0 0 25" />
                
                <TextBox x:Name="EmailTextBox"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0 0 0 16" />

                <PasswordBox x:Name="PasswordBox"
                             materialDesign:HintAssist.Hint="Пароль"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0 0 0 16"
                             PasswordChanged="PasswordBox_PasswordChanged" />

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#EF4444" 
                           Margin="0 0 0 12"
                           TextWrapping="Wrap"
                           MinHeight="20"
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button Content="ВОЙТИ"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="45"
                        Margin="0 0 0 12"
                        IsEnabled="{Binding IsNotBusy}" />

                <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="45"
                        Margin="0 0 0 12"
                        IsEnabled="{Binding IsNotBusy}" Click="Button_Click" />

                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#9CA3AF" 
                           FontSize="11"
                           HorizontalAlignment="Center"
                           MinHeight="16"
                           Margin="0 8 0 0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>