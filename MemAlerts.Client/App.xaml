<Application x:Class="MemAlerts.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:MemAlerts.Client.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DispatcherUnhandledException="App_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            
            <!-- Custom Resources for AlertOverlayWindow -->
            <SolidColorBrush x:Key="BackgroundCard" Color="#1e1e1e" />
            <SolidColorBrush x:Key="BackgroundDark" Color="#000000" />
            <SolidColorBrush x:Key="PrimaryBlue" Color="#673AB7" /> <!-- DeepPurple 500 -->
            <SolidColorBrush x:Key="BorderColor" Color="#333333" />
            
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#673AB7" Offset="0.0" />
                <GradientStop Color="#512DA8" Offset="1.0" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>