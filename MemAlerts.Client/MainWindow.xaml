<Window x:Class="MemAlerts.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:MemAlerts.Shared.Models;assembly=MemAlerts.Shared"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MemAlerts Client"
        Height="800"
        MinHeight="800"
        Width="1280"
        MinWidth="1280"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: ColorZone for primary branding -->
        <materialDesign:ColorZone Mode="PrimaryMid" 
                                  Padding="16" 
                                  materialDesign:ElevationAssist.Elevation="Dp4"
                                  MouseLeftButtonDown="ColorZone_MouseLeftButtonDown">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="YoutubeTv" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 12 0"/>
                    <TextBlock Text="MemAlerts" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <!-- Connection Status -->
                    <Border Background="#20FFFFFF" CornerRadius="12" Padding="12,6" Margin="0,0,8,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Web" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                            <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" FontSize="11" FontWeight="Medium" />
                        </StackPanel>
                    </Border>

                    <!-- App Controls (Window Buttons) -->
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="MinimizeButton_Click"
                            ToolTip="Свернуть"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="MaximizeButton_Click"
                            ToolTip="Развернуть/Восстановить"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="4,0,0,0">
                        <materialDesign:PackIcon Kind="WindowMaximize" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="CloseButton_Click"
                            ToolTip="Закрыть"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="4,0,-8,0">
                        <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20" />
                    </Button>
                </StackPanel>

                <!-- Spacer -->
                <TextBlock />
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column: Catalog -->
            <materialDesign:Card Grid.Column="0" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp2" VerticalAlignment="Stretch">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Row="0" Margin="8,8,8,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Поиск мемов..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,8,0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding RefreshCatalogCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignFlatButton}" 
                                Command="{Binding RefreshCatalogCommand}"
                                ToolTip="Обновить каталог"
                                Height="Auto"
                                VerticalAlignment="Stretch"
                                Padding="8"
                                Margin="4,0,0,0">
                            <materialDesign:PackIcon Kind="Refresh" Width="24" Height="33" Foreground="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>

                    <!-- Video List -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Catalog}"
                              SelectedItem="{Binding SelectedVideo}"
                              SelectionChanged="ListView_SelectionChanged"
                              HorizontalContentAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:AlertVideo}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Thumbnail -->
                                    <Border Width="64" Height="48" CornerRadius="4" ClipToBounds="True" Background="#22000000">
                                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                    </Border>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <Border Background="{DynamicResource SecondaryHueMidBrush}" CornerRadius="2" Padding="4,1" Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Category}" FontSize="9" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}" />
                                            </Border>
                                            <TextBlock Text="{Binding Duration, StringFormat={}{0:mm\\:ss}}" FontSize="11" Opacity="0.6" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- Right Column: Player & Actions -->
            <Grid Grid.Column="1" Margin="16,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <!-- Player -->
                    <RowDefinition Height="2*" />
                    <!-- Dashboard -->
                </Grid.RowDefinitions>

                <!-- Preview Player Section -->
                <materialDesign:Card Grid.Row="0" UniformCornerRadius="8" ClipToBounds="True" Background="Black" Margin="0,0,0,16">
                    <Grid>
                        <MediaElement x:Name="PreviewPlayer"
                                      Source="{Binding PreviewSource}"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Manual"
                                      Stretch="Uniform"
                                      MediaOpened="PreviewPlayer_OnMediaOpened"
                                      MediaEnded="PreviewPlayer_OnMediaEnded" />
                        
                        <!-- Poster Image (Preview) -->
                        <Image x:Name="PreviewPoster"
                               Source="{Binding SelectedVideo.Thumbnail}"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="Visible"/>
                        
                        <!-- Player Controls Overlay -->
                        <Grid VerticalAlignment="Bottom" Background="#CC000000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- Play/Pause -->
                                <ColumnDefinition Width="*" />
                                <!-- Title -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Volume -->
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="White"
                                    Width="48" Height="48"
                                    Padding="0"
                                    Click="PreviewPlayPause_Click">
                                <materialDesign:PackIcon x:Name="PlayPauseIcon" Kind="Play" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                <TextBlock Text="{Binding SelectedVideo.Title, TargetNullValue='Выберите видео'}" 
                                           Foreground="White" 
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding SelectedVideo.Description}" 
                                           Foreground="#DDFFFFFF" 
                                           FontSize="11" 
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                        x:Name="PreviewMuteButton"
                                        Foreground="White"
                                        Click="PreviewMuteButton_Click"
                                        Margin="0,0,8,0"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon x:Name="MuteIcon" Kind="VolumeHigh" />
                                </Button>
                                <Slider x:Name="PreviewVolumeSlider"
                                        Width="80"
                                        Minimum="0" Maximum="100" Value="70"
                                        VerticalAlignment="Center"
                                        ValueChanged="PreviewVolumeSlider_OnValueChanged"
                                        IsMoveToPointEnabled="True"
                                        Style="{StaticResource MaterialDesignSlider}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Bottom Dashboard -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- Submission Form -->
                    <materialDesign:Card Grid.Column="0" UniformCornerRadius="8" Padding="24" Margin="0,0,8,0" VerticalAlignment="Stretch">
                        <Grid>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Content="Загрузить видео"
                                        Click="BrowseVideo_Click"
                                        Height="60"
                                        FontSize="18"
                                        Margin="0,0,0,24" />
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding SubmitRequestCommand}"
                                        ToolTip="Отправить алерт в очередь"
                                        Height="60"
                                        FontSize="18">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Send" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center" />
                                        <TextBlock Text="ОТПРАВИТЬ" FontWeight="Bold" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <!-- History / Queue -->
                    <materialDesign:Card Grid.Column="1" UniformCornerRadius="8" Padding="0" Margin="8,0,0,0" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <materialDesign:ColorZone Mode="PrimaryLight" Padding="16,8">
                                <DockPanel>
                                    <Button DockPanel.Dock="Right"
                                            Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding RefreshRequestsCommand}"
                                            ToolTip="Обновить очередь"
                                            Width="24" Height="24"
                                            Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" />
                                    </Button>
                                    <TextBlock Text="Очередь запросов" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                </DockPanel>
                            </materialDesign:ColorZone>

                            <ListView Grid.Row="1" ItemsSource="{Binding ActiveRequests}" Padding="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:AlertRequest}">
                                        <Grid Margin="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <materialDesign:PackIcon Kind="ClockOutline" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,8,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock FontWeight="Bold" Text="{Binding ViewerName}" />
                                                <TextBlock Text="{Binding Video.Title}" FontSize="11" Opacity="0.7" />
                                            </StackPanel>

                                            <Border Grid.Column="2" 
                                                    Background="{DynamicResource MaterialDesignDivider}" 
                                                    CornerRadius="4" 
                                                    Padding="6,2" 
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" FontSize="10" />
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" Mode="Standard" Padding="12,4">
            <DockPanel>
                <TextBlock Text="{Binding ConnectionStatus}" DockPanel.Dock="Right" FontSize="11" Opacity="0.7" />
                <TextBlock Text="{Binding StatusMessage}" FontSize="11" />
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>