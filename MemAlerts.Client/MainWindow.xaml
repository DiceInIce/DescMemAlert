<Window x:Class="MemAlerts.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:MemAlerts.Shared.Models;assembly=MemAlerts.Shared"
        xmlns:viewmodels="clr-namespace:MemAlerts.Client.ViewModels"
        xmlns:converters="clr-namespace:MemAlerts.Client.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="MemAlerts Client"
        Height="900"
        MinHeight="900"
        Width="1280"
        MinWidth="1280"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.Resources>
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
            <converters:BooleanToCursorConverter x:Key="BooleanToCursorConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Mode="PrimaryMid" 
                                  Padding="16" 
                                  materialDesign:ElevationAssist.Elevation="Dp4"
                                  MouseLeftButtonDown="ColorZone_MouseLeftButtonDown">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Width="36" Height="36"
                            Margin="0,0,12,0"
                            ToolTip="Меню"
                            Click="MenuButton_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="24" Height="24" />
                    </Button>
                    <materialDesign:PackIcon Kind="YoutubeTv" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 12 0"/>
                    <TextBlock Text="MemAlerts" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Command="{Binding OpenFriendsWindowCommand}"
                            ToolTip="Друзья"
                            Foreground="White"
                            Width="32" Height="32"
                            Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="AccountMultiple" Width="20" Height="20" />
                    </Button>
                    
                    <Border Background="#20FFFFFF" CornerRadius="12" Padding="12,6" Margin="0,0,8,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Web" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                            <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" FontSize="11" FontWeight="Medium" />
                        </StackPanel>
                    </Border>

                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="MinimizeButton_Click"
                            ToolTip="Свернуть"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="MaximizeButton_Click"
                            ToolTip="Развернуть/Восстановить"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="4,0,0,0">
                        <materialDesign:PackIcon Kind="WindowMaximize" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="CloseButton_Click"
                            ToolTip="Закрыть"
                            Foreground="White"
                            Width="30" Height="30"
                            Margin="4,0,-8,0">
                        <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20" />
                    </Button>
                </StackPanel>

                <TextBlock />
            </DockPanel>
        </materialDesign:ColorZone>

        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp2" VerticalAlignment="Stretch">
                    <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="8,8,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <RadioButton Grid.Column="0"
                                     Style="{StaticResource MaterialDesignTabRadioButton}"
                                     Content="МОИ ВИДЕО"
                                     IsChecked="{Binding IsGlobalLibrary, Converter={StaticResource InvertBooleanConverter}}"
                                     GroupName="LibraryMode"
                                     Height="32"
                                     Margin="0,0,4,0"/>
                                     
                        <RadioButton Grid.Column="1"
                                     Style="{StaticResource MaterialDesignTabRadioButton}"
                                     Content="ПОИСК"
                                     IsChecked="{Binding IsGlobalLibrary}"
                                     GroupName="LibraryMode"
                                     Height="32"
                                     Margin="4,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="8,12,8,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Поиск мемов..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,8,0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding RefreshCatalogCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignFlatButton}" 
                                Command="{Binding RefreshCatalogCommand}"
                                ToolTip="Обновить каталог"
                                Height="Auto"
                                VerticalAlignment="Stretch"
                                Padding="8"
                                Margin="4,0,0,0">
                            <materialDesign:PackIcon Kind="Refresh" Width="24" Height="33" Foreground="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                    </Grid>

                    <ListView Grid.Row="2"
                              ItemsSource="{Binding Catalog}"
                              SelectedItem="{Binding SelectedVideo}"
                              SelectionChanged="ListView_SelectionChanged"
                              HorizontalContentAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:AlertVideo}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Width="64" Height="48" CornerRadius="4" ClipToBounds="True" Background="#22000000">
                                        <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <Border Background="{DynamicResource SecondaryHueMidBrush}" CornerRadius="2" Padding="4,1" Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Category}" FontSize="9" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}" />
                                            </Border>
                                            <TextBlock Text="{Binding Duration, StringFormat={}{0:mm\\:ss}}" FontSize="11" Opacity="0.6" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Width="24" Height="24"
                                            Margin="0,0,4,0"
                                            Padding="0"
                                            ToolTip="Удалить"
                                            Command="{Binding DataContext.DeleteVideoCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding IsCustom, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="DeleteOutline" Width="16" Height="16" Foreground="#FF5555" Opacity="0.7"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <Grid Grid.Column="1" Margin="16,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" UniformCornerRadius="8" ClipToBounds="True" Background="Black" Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <MediaElement x:Name="PreviewPlayer"
                                          LoadedBehavior="Manual"
                                          UnloadedBehavior="Manual"
                                          Stretch="Uniform"
                                          MediaOpened="PreviewPlayer_OnMediaOpened"
                                          MediaEnded="PreviewPlayer_OnMediaEnded" />
                            
                            <wv2:WebView2 x:Name="PreviewWebView"
                                          Visibility="Collapsed"/>
                            
                            <Image x:Name="PreviewPoster"
                                   Source="{Binding SelectedVideo.Thumbnail}"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Visibility="Visible"/>
                        </Grid>
                        
                        <Grid Grid.Row="1" Background="#CC000000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="White"
                                    Width="48" Height="48"
                                    Padding="0"
                                    Click="PreviewPlayPause_Click">
                                <materialDesign:PackIcon x:Name="PlayPauseIcon" Kind="Play" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                <TextBlock Text="{Binding SelectedVideo.Title, TargetNullValue='Выберите видео'}" 
                                           Foreground="White" 
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding SelectedVideo.Description}" 
                                           Foreground="#DDFFFFFF" 
                                           FontSize="11" 
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                                <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                        x:Name="PreviewMuteButton"
                                        Foreground="White"
                                        Click="PreviewMuteButton_Click"
                                        Margin="0,0,8,0"
                                        Width="32" Height="32">
                                    <materialDesign:PackIcon x:Name="MuteIcon" Kind="VolumeHigh" />
                                </Button>
                                <Slider x:Name="PreviewVolumeSlider"
                                        Width="80"
                                        Minimum="0" Maximum="100" Value="70"
                                        VerticalAlignment="Center"
                                        ValueChanged="PreviewVolumeSlider_OnValueChanged"
                                        IsMoveToPointEnabled="True"
                                        Style="{StaticResource MaterialDesignSlider}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="0" UniformCornerRadius="8" Padding="24" Margin="0,0,8,0" VerticalAlignment="Stretch">
                        <Grid>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Content="ФАЙЛ"
                                            ToolTip="Загрузить локальное видео"
                                            Click="BrowseVideo_Click"
                                            Height="50"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                            
                                    <Button Grid.Column="1"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Content="URL"
                                            ToolTip="Добавить видео по ссылке"
                                            Click="AddUrlVideo_Click"
                                            Height="50"
                                            FontSize="14"
                                            Margin="4,0,0,0" />
                                </Grid>
                                
                                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          ItemsSource="{Binding Friends}"
                                          SelectedItem="{Binding SelectedFriend}"
                                          materialDesign:HintAssist.Hint="Кому отправить"
                                          DisplayMemberPath="Login"
                                          Margin="0,0,0,16"
                                          Height="50"
                                          FontSize="14">
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>

                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding SubmitRequestCommand}"
                                        ToolTip="Отправить алерт в очередь"
                                        Height="60"
                                        FontSize="18">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Send" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center" />
                                        <TextBlock Text="ОТПРАВИТЬ" FontWeight="Bold" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" UniformCornerRadius="8" Padding="0" Margin="8,0,0,0" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <materialDesign:ColorZone Mode="PrimaryLight" Padding="16,8">
                                <DockPanel>
                                    <Button DockPanel.Dock="Right"
                                            Style="{StaticResource MaterialDesignIconButton}" 
                                            Command="{Binding RefreshRequestsCommand}"
                                            ToolTip="Обновить очередь"
                                            Width="24" Height="24"
                                            Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" />
                                    </Button>
                                    <TextBlock Text="История" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                </DockPanel>
                            </materialDesign:ColorZone>

                            <ListView Grid.Row="1" ItemsSource="{Binding ActiveRequests}" Padding="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="{x:Type viewmodels:HistoryItemViewModel}">
                                        <Border Padding="8" 
                                                Background="Transparent"
                                                Cursor="{Binding IsWebVideo, Converter={StaticResource BooleanToCursorConverter}}"
                                                ToolTip="{Binding OriginalUrl}">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick" 
                                                              Command="{Binding DataContext.OpenHistoryLinkCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Direction Icon/Label -->
                                                <Border Grid.Column="0" 
                                                        CornerRadius="4" 
                                                        Background="{Binding DirectionColor}" 
                                                        Padding="6,2" 
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DirectionLabel}" 
                                                               Foreground="White" 
                                                               FontSize="9" 
                                                               FontWeight="Bold"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding ViewerName}" TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding VideoTitle}" FontSize="11" Opacity="0.7" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <Border Grid.Column="2" 
                                                        Background="{DynamicResource MaterialDesignDivider}" 
                                                        CornerRadius="4" 
                                                        Padding="6,2" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Status}" FontSize="9" Opacity="0.8"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </Grid>

        <materialDesign:ColorZone Grid.Row="2" Mode="Standard" Padding="12,4">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}" FontSize="11" />
            </DockPanel>
        </materialDesign:ColorZone>

        <Grid x:Name="SideMenuOverlay"
              Grid.RowSpan="3"
              Visibility="Collapsed"
              Panel.ZIndex="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="SideMenuPanel"
                    Width="320"
                    Background="{DynamicResource MaterialDesignPaper}"
                    materialDesign:ElevationAssist.Elevation="Dp6">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="SideMenuTransform" X="-320"/>
                </Border.RenderTransform>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="16,16,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Menu" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Меню" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="32" Height="32"
                                ToolTip="Закрыть меню"
                                Click="CloseMenuButton_Click">
                            <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                        </Button>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="16,0,16,16">
                        <TextBlock Text="Управление" FontWeight="Bold" Opacity="0.6" Margin="0,0,0,12"/>

                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding ClearCacheCommand}"
                                Height="54"
                                Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DeleteSweep" Width="22" Height="22" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Очистить кэш" FontWeight="SemiBold"/>
                                    <TextBlock Text="Удалить загруженные видео" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="54"
                                Click="LogoutButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LogoutVariant" Width="22" Height="22" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="Выйти" FontWeight="SemiBold"/>
                                    <TextBlock Text="Сменить пользователя" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="2"
                               Margin="16,0,16,24"
                               Text="{Binding ApplicationVersion}"
                               FontSize="12"
                               Opacity="0.6"/>
                </Grid>
            </Border>

            <Border x:Name="SideMenuBackdrop"
                    Grid.Column="1"
                    Background="#80000000"
                    MouseDown="MenuOverlayBackground_MouseDown"/>
        </Grid>
    </Grid>
</Window>